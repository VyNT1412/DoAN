<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/mainbg"
    tools:context=".Fragment.Fragment_ListSV">
    <Spinner
        android:id="@+id/spinnerKHOAlistSV"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:textColor="#010E48"
        android:layout_below="@+id/textViewHeader1"
        />

    <Spinner
        android:id="@+id/spinnerLOPListSV"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:inputType="text"
        android:textColor="#010E48"
        android:layout_below="@+id/spinnerKHOAlistSV"/>

    <Button
        android:id="@+id/SearchKhoaSV"
        android:text="Tìm theo khoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="#5E3587"
        android:textColor="@color/white"
        android:layout_below="@id/spinnerLOPListSV"/>

    <Button
        android:id="@+id/btnSearchLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="#5E3587"
        android:textColor="@color/white"
        android:layout_below="@id/spinnerLOPListSV"
        android:layout_alignParentRight="true"
        android:text="Tìm theo lớp" />

    <TextView
        android:id="@+id/textViewHeader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/artifika"
        android:text="DANH SÁCH SINH VIÊN"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#9F8C03"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/SearchKhoaSV">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/spinnerLOPListSV">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/masvBang"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Mã số SV"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/mailsvBang"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Email SV"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/hosvBang"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Họ SV"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/tensvBang"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Tên SV"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/gtsvBang"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Giới tính"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/lopBang"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Lớp SV"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/maKhoa"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Mã khoa"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:id="@+id/tenkhoasvBang"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Khoa"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:background="@drawable/border_row"
                            android:textColor="#F1D88E"
                            android:textAlignment="center"/>
                    </TableRow>
                </TableRow>
            </TableLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/table_sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>