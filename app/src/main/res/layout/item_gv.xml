<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7E909F"
    android:stretchColumns="*">

    <TableRow>
        <TextView
            android:id="@+id/itemHoGv"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/lightgrey"
            android:background="@drawable/edittext"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/itemTenGv"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/itemKhoa"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:textColor="@color/lightgrey"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/itemEmail"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/lightgrey"
            android:background="@drawable/edittext"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/itemHocVi"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:textColor="@color/lightgrey"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/itemChucDanh"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:textColor="@color/lightgrey"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/itemLuong"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/edittext"
            android:textColor="@color/lightgrey"
            android:textAlignment="center" />
        <Button
            android:id="@+id/btnSuaTTGv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/borderbtn"
            android:text="Edit" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnXoaTTGv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/borderbtn"
            android:text="Delete" />
    </TableRow>
</TableLayout>