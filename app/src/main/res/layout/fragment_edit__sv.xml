<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    android:background="#CCE4D3"
    tools:context=".Fragment.Edit_TT_SV_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Họ tên sinh viên:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/tthotensv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Email sinh viên:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/ttemailsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Khoa:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/ttkhoasv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tên khoa:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/tttenkhoasv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mã lớp:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/ttmalopsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Giới tính:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/ttgioitinhsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ngày sinh:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/ttngaysinhsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Quê quán:"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/lightgrey" />
            <TextView
                android:id="@+id/ttquequansv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/artifika"
                android:text=""
                android:textColor="@color/lightgrey"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa sinh viên"
            android:textAlignment="center"
            android:textColor="#FF3300"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"

            android:layout_below="@+id/textView3"
            android:id="@+id/layout1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ma khoa"
                android:textColor="#CC99FF" />

            <Spinner
                android:id="@+id/spnmakhoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:textColor="#800080"
                android:text="Name" />
        </LinearLayout>

        <Button
            android:id="@+id/btnchonkhoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="Chọn khoa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:id="@id/layout2"
            android:layout_below="@+id/layout1">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ma lop"
                android:textColor="#CC99FF"/>

            <Spinner
                android:id="@+id/spnmalop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#800080"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2">


        </LinearLayout>

        <Button
            android:id="@+id/btnCapNhatGV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Cập nhật" />

        <Button
            android:id="@+id/btnBackDs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>